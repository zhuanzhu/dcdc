<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.config.dao.write.PolymallUserWriteDAO">
	<insert id="insert" parameterType="com.egeo.components.config.po.PolymallUserPO">
		INSERT INTO polymall_user(
        <trim suffixOverrides=",">
			<if test="token != null">
				token,
			</if>
			<if test="merchantId != null">
				merchant_id,
			</if>
        </trim>		
		) VALUES (
        <trim suffixOverrides=",">
			<if test="token != null">
				#{token},
			</if>
			<if test="merchantId != null">
				#{merchantId},
			</if>
        </trim>		
		)
		<selectKey keyProperty="id" resultType="java.lang.Long">
			select LAST_INSERT_ID()
		</selectKey>
	</insert>


	
	
	<update id="update">
	UPDATE polymall_user 
		<set>
			<if test="token != null">
				token = #{token},
			</if>			
			<if test="merchantId != null">
				merchant_id = #{merchantId},
			</if>			
		</set>
			WHERE id = #{id}
	</update>	
	

	<delete id="delete">
		delete from polymall_user where id = #{id}
	</delete>

	<delete id="deleteByPara">
		delete from polymall_user 
		<where>
			<if test="token != null">
				and token = #{token}
			</if>
			<if test="merchantId != null">
				and merchant_id = #{merchantId}
			</if>
		</where>
	</delete>


</mapper>
	