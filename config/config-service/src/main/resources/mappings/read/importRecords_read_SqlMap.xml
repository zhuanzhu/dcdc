<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.config.dao.read.ImportRecordsReadDAO">

	<select id="queryRecordTempBySn" resultMap="importRecordsMap">
		select * from import_records
		where file_sequence_number=#{sn}
	</select>

	<resultMap type="com.egeo.components.config.po.ImportRecordsPO" id="importRecordsMap">
		<result property="id" column="id" />
		<result property="companyName" column="company_name" />
		<result property="templateType" column="template_type" />
		<result property="generatedTime" column="generated_time" />
		<result property="fileSequenceNumber" column="file_sequence_number" />
		<result property="createTime" column="create_time" />
	</resultMap>

	<sql id="importRecordsColumns">
		id,
		company_name,
		template_type,
		generated_time,
		file_sequence_number,
		create_time
	</sql>

	<select id="findById" parameterType="com.egeo.components.config.po.ImportRecordsPO" resultMap="importRecordsMap">
		SELECT
		<include refid="importRecordsColumns" />
		FROM import_records
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="importRecordsMap">
		SELECT
		<include refid="importRecordsColumns" />
		FROM import_records
		<where>
			<if test="po.companyName != null">
				and company_name = #{po.companyName}
			</if>
			<if test="po.templateType != null">
				and template_type = #{po.templateType}
			</if>
			<if test="po.generatedTime != null">
				and generated_time = #{po.generatedTime}
			</if>
			<if test="po.fileSequenceNumber != null">
				and file_sequence_number = #{po.fileSequenceNumber}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM import_records
		<where>
			<if test="po.companyName != null">
				and company_name = #{po.companyName}
			</if>
			<if test="po.templateType != null">
				and template_type = #{po.templateType}
			</if>
			<if test="po.generatedTime != null">
				and generated_time = #{po.generatedTime}
			</if>
			<if test="po.fileSequenceNumber != null">
				and file_sequence_number = #{po.fileSequenceNumber}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="importRecordsMap">
		SELECT
		<include refid="importRecordsColumns" />
		FROM import_records
		<where>
			<if test="po.companyName != null">
				and company_name = #{po.companyName}
			</if>
			<if test="po.templateType != null">
				and template_type = #{po.templateType}
			</if>
			<if test="po.generatedTime != null">
				and generated_time = #{po.generatedTime}
			</if>
			<if test="po.fileSequenceNumber != null">
				and file_sequence_number = #{po.fileSequenceNumber}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
</mapper>
	