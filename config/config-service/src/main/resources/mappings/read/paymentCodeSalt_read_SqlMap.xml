<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.config.dao.read.PaymentCodeSaltReadDAO">
	<resultMap type="com.egeo.components.config.po.PaymentCodeSaltPO" id="paymentCodeSaltMap">
		<result property="id" column="id" />
		<result property="paymentCodeUuid" column="payment_code_uuid" />
		<result property="saltValue" column="salt_value" />
	</resultMap>

	<sql id="paymentCodeSaltColumns">
		id,
		payment_code_uuid,
		salt_value
	</sql>

	<select id="findById" parameterType="com.egeo.components.config.po.PaymentCodeSaltPO" resultMap="paymentCodeSaltMap">
		SELECT
		<include refid="paymentCodeSaltColumns" />
		FROM payment_code_salt
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="paymentCodeSaltMap">
		SELECT
		<include refid="paymentCodeSaltColumns" />
		FROM payment_code_salt
		<where>
			<if test="po.paymentCodeUuid != null">
				and payment_code_uuid = #{po.paymentCodeUuid}
			</if>
			<if test="po.saltValue != null">
				and salt_value = #{po.saltValue}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM payment_code_salt
		<where>
			<if test="po.paymentCodeUuid != null">
				and payment_code_uuid = #{po.paymentCodeUuid}
			</if>
			<if test="po.saltValue != null">
				and salt_value = #{po.saltValue}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="paymentCodeSaltMap">
		SELECT
		<include refid="paymentCodeSaltColumns" />
		FROM payment_code_salt
		<where>
			<if test="po.paymentCodeUuid != null">
				and payment_code_uuid = #{po.paymentCodeUuid}
			</if>
			<if test="po.saltValue != null">
				and salt_value = #{po.saltValue}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
	
	<select id="findSaltByUUID" resultType="java.lang.String">
		SELECT
		salt_value
		FROM payment_code_salt
		WHERE payment_code_uuid = #{paymentCodeUuid}
	</select>
</mapper>
	