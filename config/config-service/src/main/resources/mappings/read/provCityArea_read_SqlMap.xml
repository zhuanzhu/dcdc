<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.config.dao.read.ProvCityAreaReadDAO">
	<resultMap type="com.egeo.components.config.po.ProvCityAreaPO" id="provCityAreaMap">
		<result property="id" column="id" />
		<result property="areaname" column="areaname" />
		<result property="parentno" column="parentno" />
		<result property="areacode" column="areacode" />
		<result property="arealevel" column="arealevel" />
		<result property="typename" column="typename" />
	</resultMap>

	<sql id="provCityAreaColumns">
		id,
		areaname,
		parentno,
		areacode,
		arealevel,
		typename
	</sql>

	<select id="findById" parameterType="com.egeo.components.config.po.ProvCityAreaPO" resultMap="provCityAreaMap">
		SELECT
		<include refid="provCityAreaColumns" />
		FROM prov_city_area
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="provCityAreaMap">
		SELECT
		<include refid="provCityAreaColumns" />
		FROM prov_city_area
		<where>
			<if test="po.areaname != null">
				and areaname = #{po.areaname}
			</if>
			<if test="po.parentno != null">
				and parentno = #{po.parentno}
			</if>
			<if test="po.areacode != null">
				and areacode = #{po.areacode}
			</if>
			<if test="po.arealevel != null">
				and arealevel = #{po.arealevel}
			</if>
			<if test="po.typename != null">
				and typename = #{po.typename}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM prov_city_area
		<where>
			<if test="po.areaname != null">
				and areaname = #{po.areaname}
			</if>
			<if test="po.parentno != null">
				and parentno = #{po.parentno}
			</if>
			<if test="po.areacode != null">
				and areacode = #{po.areacode}
			</if>
			<if test="po.arealevel != null">
				and arealevel = #{po.arealevel}
			</if>
			<if test="po.typename != null">
				and typename = #{po.typename}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="provCityAreaMap">
		SELECT
		<include refid="provCityAreaColumns" />
		FROM prov_city_area
		<where>
			<if test="po.areaname != null">
				and areaname = #{po.areaname}
			</if>
			<if test="po.parentno != null">
				and parentno = #{po.parentno}
			</if>
			<if test="po.areacode != null">
				and areacode = #{po.areacode}
			</if>
			<if test="po.arealevel != null">
				and arealevel = #{po.arealevel}
			</if>
			<if test="po.typename != null">
				and typename = #{po.typename}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
</mapper>
	