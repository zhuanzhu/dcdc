<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.product.dao.write.MerchantProductTagWriteDAO">
	
	<sql id="inClause">
		not in
		<foreach collection="ids" item="id" open="(" separator="," close=")">
			#{id}
		</foreach>
	</sql>
	
	<sql id="insertAllClause">
		<foreach collection="poList" item="po" separator=",">
				(#{po.merchantProductId},
				#{po.tagId})
		</foreach>
	</sql>
	
	<insert id="insert" parameterType="com.egeo.components.product.po.MerchantProductTagPO">
		INSERT INTO merchant_product_tag(
        <trim suffixOverrides=",">
			<if test="merchantProductId != null">
				merchant_product_id,
			</if>
			<if test="tagId != null">
				tag_id,
			</if>
        </trim>		
		) VALUES (
        <trim suffixOverrides=",">
			<if test="merchantProductId != null">
				#{merchantProductId},
			</if>
			<if test="tagId != null">
				#{tagId},
			</if>
        </trim>		
		)
		<selectKey keyProperty="id" resultType="java.lang.Long">
			select LAST_INSERT_ID()
		</selectKey>
	</insert>
	
	<insert id="insertAll">
		INSERT INTO merchant_product_tag(
				merchant_product_id,
				tag_id
		) VALUES <include refid="insertAllClause" /> 
	</insert>


	
	
	<update id="update">
	UPDATE merchant_product_tag 
		<set>
			<if test="merchantProductId != null">
				merchant_product_id = #{merchantProductId},
			</if>			
			<if test="tagId != null">
				tag_id = #{tagId},
			</if>			
		</set>
			WHERE id = #{id}
	</update>	
	

	<delete id="delete">
		delete from merchant_product_tag where id = #{id}
	</delete>

	<delete id="deleteByPara">
		delete from merchant_product_tag 
		<where>
			<if test="merchantProductId != null">
				and merchant_product_id = #{merchantProductId}
			</if>
			<if test="tagId != null">
				and tag_id = #{tagId}
			</if>
		</where>
	</delete>
	
	<delete id="delByTags">
		delete from merchant_product_tag where merchant_product_id = #{merchantProductId} and tag_id <include refid="inClause" />
	</delete>


</mapper>
	