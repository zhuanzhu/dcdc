	<insert id="insert" parameterType="com.egeo.components.product.po.TopSearchPO">
		INSERT INTO top_search(
        <trim suffixOverrides=",">
			<if test="name != null">
				name,
			</if>
			<if test="sortValue != null">
				sort_value,
			</if>
			<if test="isStart != null">
				is_start,
