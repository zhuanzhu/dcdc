<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.product.dao.write.JdCategoryWriteDAO">
	<insert id="insert" parameterType="com.egeo.components.product.po.JdCategoryPO">
		INSERT INTO jd_category(
        <trim suffixOverrides=",">
        	id,
			<if test="name != null">
				name,
			</if>
			<if test="parentId != null">
				parent_id,
			</if>
			<if test="innerCategoryId != null">
				inner_category_id,
			</if>
			<if test="catClass != null">
				cat_class,
			</if>

        </trim>		
		) VALUES (
        <trim suffixOverrides=",">
        	#{id},
			<if test="name != null">
				#{name},
			</if>
			<if test="parentId != null">
				#{parentId},
			</if>
			<if test="innerCategoryId != null">
				#{innerCategoryId},
			</if>
			<if test="catClass != null">
				#{catClass},
			</if>
        </trim>		
		)
		<selectKey keyProperty="id" resultType="java.lang.Long">
			select LAST_INSERT_ID()
		</selectKey>
	</insert>


	
	
	<update id="update">
	UPDATE jd_category 
		<set>
			<if test="name != null">
				name = #{name},
			</if>			
			<if test="parentId != null">
				parent_id = #{parentId},
			</if>			
			<if test="innerCategoryId != null">
				inner_category_id = #{innerCategoryId},
			</if>			
		</set>
			WHERE id = #{id}
	</update>	
	

	<delete id="delete">
		delete from jd_category where id = #{id}
	</delete>

	<delete id="deleteByPara">
		delete from jd_category 
		<where>
			<if test="name != null">
				and name = #{name}
			</if>
			<if test="parentId != null">
				and parent_id = #{parentId}
			</if>
			<if test="innerCategoryId != null">
				and inner_category_id = #{innerCategoryId}
			</if>
		</where>
	</delete>


</mapper>
	