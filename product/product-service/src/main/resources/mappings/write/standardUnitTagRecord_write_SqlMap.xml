	<sql id="insertAllClause">
		<foreach collection="poList" item="po" separator=",">
				(#{po.standardUnitRecordId},
				#{po.tagId})
		</foreach>
	</sql>
	
	<insert id="insert" parameterType="com.egeo.components.product.po.StandardUnitTagRecordPO">
		INSERT INTO standard_unit_tag_record(
        <trim suffixOverrides=",">
			<if test="standardUnitRecordId != null">
				standard_unit_record_id,
			</if>
			<if test="tagId != null">
				tag_id,
			</if>
        </trim>		
		) VALUES (
        <trim suffixOverrides=",">
			<if test="standardUnitRecordId != null">
				#{standardUnitRecordId},
			</if>
			<if test="tagId != null">
				#{tagId},
			</if>
        </trim>		
		)
		<selectKey keyProperty="id" resultType="java.lang.Long">
			select LAST_INSERT_ID()
		</selectKey>
	</insert>
	
	<insert id="insertAll">
		INSERT INTO standard_unit_tag_record(
				standard_unit_record_id,
				tag_id
		) VALUES <include refid="insertAllClause" /> 
	</insert>


	
	
	<update id="update">
	UPDATE standard_unit_tag_record 
		<set>
			<if test="standardUnitRecordId != null">
				standard_unit_record_id = #{standardUnitRecordId},
			</if>			
			<if test="tagId != null">
				tag_id = #{tagId},
			</if>			
		</set>
			WHERE id = #{id}
	</update>	
	

	<delete id="delete">
		delete from standard_unit_tag_record where id = #{id}
	</delete>

	<delete id="deleteByPara">
		delete from standard_unit_tag_record 
		<where>
			<if test="standardUnitRecordId != null">
				and standard_unit_record_id = #{standardUnitRecordId}
			</if>
			<if test="tagId != null">
				and tag_id = #{tagId}
			</if>
		</where>
	</delete>


</mapper>
	