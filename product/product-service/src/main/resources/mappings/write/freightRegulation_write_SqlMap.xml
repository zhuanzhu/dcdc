<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.product.dao.write.FreightRegulationWriteDAO">
	
	<sql id="inClause">
		not in
		<foreach collection="ids" item="id" open="(" separator="," close=")">
			#{id}
		</foreach>
	</sql>
	
	<insert id="insert" parameterType="com.egeo.components.product.po.FreightRegulationPO">
		INSERT INTO freight_regulation(
        <trim suffixOverrides=",">
			<if test="freightTemplateId != null">
				freight_template_id,
			</if>
			<if test="orderMoney != null">
				order_money,
			</if>
			<if test="freightMoney != null">
				freight_money,
			</if>
        </trim>		
		) VALUES (
        <trim suffixOverrides=",">
			<if test="freightTemplateId != null">
				#{freightTemplateId},
			</if>
			<if test="orderMoney != null">
				#{orderMoney},
			</if>
			<if test="freightMoney != null">
				#{freightMoney},
			</if>
        </trim>		
		)
		<selectKey keyProperty="id" resultType="java.lang.Long">
			select LAST_INSERT_ID()
		</selectKey>
	</insert>


	
	
	<update id="update">
	UPDATE freight_regulation 
		<set>
			<if test="freightTemplateId != null">
				freight_template_id = #{freightTemplateId},
			</if>			
			<if test="orderMoney != null">
				order_money = #{orderMoney},
			</if>			
			<if test="freightMoney != null">
				freight_money = #{freightMoney},
			</if>			
		</set>
			WHERE id = #{id}
	</update>	
	

	<delete id="delete">
		delete from freight_regulation where id = #{id}
	</delete>

	<delete id="deleteByPara">
		delete from freight_regulation 
		<where>
			<if test="freightTemplateId != null">
				and freight_template_id = #{freightTemplateId}
			</if>
			<if test="orderMoney != null">
				and order_money = #{orderMoney}
			</if>
			<if test="freightMoney != null">
				and freight_money = #{freightMoney}
			</if>
		</where>
	</delete>
	
	<delete id="delByFreightRegulationIds">
		delete from freight_regulation where id <include refid="inClause" />
	</delete>


</mapper>
	