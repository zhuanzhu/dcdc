<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.product.dao.write.StandardUnitClientWriteDAO">
	<sql id="inClause">
		not in
		<foreach collection="ids" item="id" open="(" separator=","
			close=")">
			#{id}
		</foreach>
	</sql>
	
	<sql id="insertAllClause">
		<foreach collection="poList" item="po" separator=",">
				(#{po.standardUnitId},
				#{po.clientId})
		</foreach>
	</sql>


	<insert id="saveStandardUnitClient" parameterType="com.egeo.components.product.po.StandardUnitClientPO" >
		insert into standard_unit_client (
		standard_unit_id,
		client_id
		)values
		<foreach collection="poList" item="po"  separator="," >
			(
			#{po.standardUnitId},
			#{po.clientId}
			)
		</foreach>
	</insert>




	<insert id="insert" parameterType="com.egeo.components.product.po.StandardUnitClientPO">
		INSERT INTO standard_unit_client(
        <trim suffixOverrides=",">
			<if test="standardUnitId != null">
				standard_unit_id,
			</if>
			<if test="clientId != null">
				client_id,
			</if>
			<if test="createTime != null">
				create_time,
			</if>
        </trim>		
		) VALUES (
        <trim suffixOverrides=",">
			<if test="standardUnitId != null">
				#{standardUnitId},
			</if>
			<if test="clientId != null">
				#{clientId},
			</if>
			<if test="createTime != null">
				#{createTime},
			</if>
        </trim>		
		)
		<selectKey keyProperty="id" resultType="java.lang.Long">
			select LAST_INSERT_ID()
		</selectKey>
	</insert>
	
	<insert id="insertAll">
		INSERT INTO standard_unit_client(
				standard_unit_id,
				client_id
		) VALUES <include refid="insertAllClause" />  
	</insert>


	
	
	<update id="update">
	UPDATE standard_unit_client 
		<set>
			<if test="standardUnitId != null">
				standard_unit_id = #{standardUnitId},
			</if>			
			<if test="clientId != null">
				client_id = #{clientId},
			</if>			
			<if test="createTime != null">
				create_time = #{createTime},
			</if>			
		</set>
			WHERE id = #{id}
	</update>	
	

	<delete id="delete">
		delete from standard_unit_client where id = #{id}
	</delete>

	<delete id="deleteByPara">
		delete from standard_unit_client 
		<where>
			<if test="standardUnitId != null">
				and standard_unit_id = #{standardUnitId}
			</if>
			<if test="clientId != null">
				and client_id = #{clientId}
			</if>
			<if test="createTime != null">
				and create_time = #{createTime}
			</if>
		</where>
	</delete>
	
	<delete id="delByStandardUnitIdClientId">
		delete from standard_unit_client where standard_unit_id = #{standardUnitId} and client_id <include refid="inClause" />
	</delete>


</mapper>
	