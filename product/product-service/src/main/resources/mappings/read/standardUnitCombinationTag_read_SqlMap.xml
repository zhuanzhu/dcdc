<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.product.dao.read.StandardUnitCombinationTagReadDAO">
	<resultMap type="com.egeo.components.product.po.StandardUnitCombinationTagPO" id="standardUnitCombinationTagMap">
		<result property="id" column="id" />
		<result property="standardUnitCombinationId" column="standard_unit_combination_id" />
		<result property="tagId" column="tag_id" />
	</resultMap>
	
	<resultMap type="com.egeo.components.product.condition.StandardUnitCombinationTagCondition" id="standardUnitCombinationTagCondition" extends="standardUnitCombinationTagMap">
		<result property="tagName" column="name" />
	</resultMap>

	<sql id="standardUnitCombinationTagColumns">
		id,
		standard_unit_combination_id,
		tag_id
	</sql>

	<select id="findById" parameterType="com.egeo.components.product.po.StandardUnitCombinationTagPO" resultMap="standardUnitCombinationTagMap">
		SELECT
		<include refid="standardUnitCombinationTagColumns" />
		FROM standard_unit_combination_tag
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="standardUnitCombinationTagMap">
		SELECT
		<include refid="standardUnitCombinationTagColumns" />
		FROM standard_unit_combination_tag
		<where>
			<if test="po.standardUnitCombinationId != null">
				and standard_unit_combination_id = #{po.standardUnitCombinationId}
			</if>
			<if test="po.tagId != null">
				and tag_id = #{po.tagId}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM standard_unit_combination_tag
		<where>
			<if test="po.standardUnitCombinationId != null">
				and standard_unit_combination_id = #{po.standardUnitCombinationId}
			</if>
			<if test="po.tagId != null">
				and tag_id = #{po.tagId}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="standardUnitCombinationTagMap">
		SELECT
		<include refid="standardUnitCombinationTagColumns" />
		FROM standard_unit_combination_tag
		<where>
			<if test="po.standardUnitCombinationId != null">
				and standard_unit_combination_id = #{po.standardUnitCombinationId}
			</if>
			<if test="po.tagId != null">
				and tag_id = #{po.tagId}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id	
			</otherwise>
		</choose>
	</select>
	
	<select id="findTagByStandardUnitCombinationId" resultMap="standardUnitCombinationTagCondition">
		SELECT
		suct.id,
		suct.standard_unit_combination_id,
		suct.tag_id,
		t.`name`
		FROM standard_unit_combination_tag suct, tag t
		WHERE suct.tag_id = t.id and standard_unit_combination_id = #{standardUnitCombinationId}
	</select>
</mapper>
	