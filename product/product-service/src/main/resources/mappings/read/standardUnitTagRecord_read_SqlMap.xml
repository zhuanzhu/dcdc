<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.product.dao.read.StandardUnitTagRecordReadDAO">
	<resultMap type="com.egeo.components.product.po.StandardUnitTagRecordPO" id="standardUnitTagRecordMap">
		<result property="id" column="id" />
		<result property="standardUnitRecordId" column="standard_unit_record_id" />
		<result property="tagId" column="tag_id" />
	</resultMap>

	<sql id="standardUnitTagRecordColumns">
		id,
		standard_unit_record_id,
		tag_id
	</sql>

	<select id="findById" parameterType="com.egeo.components.product.po.StandardUnitTagRecordPO" resultMap="standardUnitTagRecordMap">
		SELECT
		<include refid="standardUnitTagRecordColumns" />
		FROM standard_unit_tag_record
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="standardUnitTagRecordMap">
		SELECT
		<include refid="standardUnitTagRecordColumns" />
		FROM standard_unit_tag_record
		<where>
			<if test="po.standardUnitRecordId != null">
				and standard_unit_record_id = #{po.standardUnitRecordId}
			</if>
			<if test="po.tagId != null">
				and tag_id = #{po.tagId}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM standard_unit_tag_record
		<where>
			<if test="po.standardUnitRecordId != null">
				and standard_unit_record_id = #{po.standardUnitRecordId}
			</if>
			<if test="po.tagId != null">
				and tag_id = #{po.tagId}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="standardUnitTagRecordMap">
		SELECT
		<include refid="standardUnitTagRecordColumns" />
		FROM standard_unit_tag_record
		<where>
			<if test="po.standardUnitRecordId != null">
				and standard_unit_record_id = #{po.standardUnitRecordId}
			</if>
			<if test="po.tagId != null">
				and tag_id = #{po.tagId}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
</mapper>
	