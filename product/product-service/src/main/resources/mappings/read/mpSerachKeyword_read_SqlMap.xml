<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.product.dao.read.MpSerachKeywordReadDAO">
	<resultMap type="com.egeo.components.product.po.MpSerachKeywordPO" id="mpSerachKeywordMap">
		<result property="id" column="id" />
		<result property="merchantProductId" column="merchant_product_id" />
		<result property="keyword" column="keyword" />
		<result property="platformId" column="platform_id" />
	</resultMap>

	<sql id="mpSerachKeywordColumns">
		id,
		merchant_product_id,
		keyword,
		platform_id
	</sql>

	<select id="findById" parameterType="com.egeo.components.product.po.MpSerachKeywordPO" resultMap="mpSerachKeywordMap">
		SELECT
		<include refid="mpSerachKeywordColumns" />
		FROM mp_serach_keyword
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="mpSerachKeywordMap">
		SELECT
		<include refid="mpSerachKeywordColumns" />
		FROM mp_serach_keyword
		<where>
			<if test="po.merchantProductId != null">
				and merchant_product_id = #{po.merchantProductId}
			</if>
			<if test="po.keyword != null">
				and keyword = #{po.keyword}
			</if>
			<if test="po.platformId != null">
				and platform_id = #{po.platformId}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM mp_serach_keyword
		<where>
			<if test="po.merchantProductId != null">
				and merchant_product_id = #{po.merchantProductId}
			</if>
			<if test="po.keyword != null">
				and keyword = #{po.keyword}
			</if>
			<if test="po.platformId != null">
				and platform_id = #{po.platformId}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="mpSerachKeywordMap">
		SELECT
		<include refid="mpSerachKeywordColumns" />
		FROM mp_serach_keyword
		<where>
			<if test="po.merchantProductId != null">
				and merchant_product_id = #{po.merchantProductId}
			</if>
			<if test="po.keyword != null">
				and keyword = #{po.keyword}
			</if>
			<if test="po.platformId != null">
				and platform_id = #{po.platformId}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
	
	<select id="keyWordByMerchantProductId" resultType="java.lang.String">
		SELECT
		keyword
		FROM mp_serach_keyword
		where merchant_product_id = #{merchantProductId} and platform_id = #{platformId}
	</select>
</mapper>
	