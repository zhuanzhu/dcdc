<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.product.dao.read.MerchantBrandReadDAO">
	<resultMap type="com.egeo.components.product.po.MerchantBrandPO" id="merchantBrandMap">
		<result property="id" column="id" />
		<result property="merchantId" column="merchant_id" />
		<result property="brandId" column="brand_id" />
		<result property="platformId" column="platform_id" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />
	</resultMap>

	<sql id="merchantBrandColumns">
		id,
		merchant_id,
		brand_id,
		platform_id,
		create_time,
		update_time
	</sql>

	<select id="findById" parameterType="com.egeo.components.product.po.MerchantBrandPO" resultMap="merchantBrandMap">
		SELECT
		<include refid="merchantBrandColumns" />
		FROM merchant_brand
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="merchantBrandMap">
		SELECT
		<include refid="merchantBrandColumns" />
		FROM merchant_brand
		<where>
			<if test="po.merchantId != null">
				and merchant_id = #{po.merchantId}
			</if>
			<if test="po.brandId != null">
				and brand_id = #{po.brandId}
			</if>
			<if test="po.platformId != null">
				and platform_id = #{po.platformId}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM merchant_brand
		<where>
			<if test="po.merchantId != null">
				and merchant_id = #{po.merchantId}
			</if>
			<if test="po.brandId != null">
				and brand_id = #{po.brandId}
			</if>
			<if test="po.platformId != null">
				and platform_id = #{po.platformId}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="merchantBrandMap">
		SELECT
		<include refid="merchantBrandColumns" />
		FROM merchant_brand
		<where>
			<if test="po.merchantId != null">
				and merchant_id = #{po.merchantId}
			</if>
			<if test="po.brandId != null">
				and brand_id = #{po.brandId}
			</if>
			<if test="po.platformId != null">
				and platform_id = #{po.platformId}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
</mapper>
	