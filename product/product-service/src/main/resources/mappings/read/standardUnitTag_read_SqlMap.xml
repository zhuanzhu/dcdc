<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.product.dao.read.StandardUnitTagReadDAO">
	<resultMap type="com.egeo.components.product.po.StandardUnitTagPO" id="standardUnitTagMap">
		<result property="id" column="id" />
		<result property="standardUnitId" column="standard_unit_id" />
		<result property="tagId" column="tag_id" />
	</resultMap>

	<sql id="standardUnitTagColumns">
		id,
		standard_unit_id,
		tag_id
	</sql>

	<select id="findById" parameterType="com.egeo.components.product.po.StandardUnitTagPO" resultMap="standardUnitTagMap">
		SELECT
		<include refid="standardUnitTagColumns" />
		FROM standard_unit_tag
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="standardUnitTagMap">
		SELECT
		<include refid="standardUnitTagColumns" />
		FROM standard_unit_tag
		<where>
			<if test="po.standardUnitId != null">
				and standard_unit_id = #{po.standardUnitId}
			</if>
			<if test="po.tagId != null">
				and tag_id = #{po.tagId}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM standard_unit_tag
		<where>
			<if test="po.standardUnitId != null">
				and standard_unit_id = #{po.standardUnitId}
			</if>
			<if test="po.tagId != null">
				and tag_id = #{po.tagId}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="standardUnitTagMap">
		SELECT
		<include refid="standardUnitTagColumns" />
		FROM standard_unit_tag
		<where>
			<if test="po.standardUnitId != null">
				and standard_unit_id = #{po.standardUnitId}
			</if>
			<if test="po.tagId != null">
				and tag_id = #{po.tagId}
			</if>
			<if test="po.tagIds != null and po.tagIds.size != 0">
				and tag_id in
				<foreach collection="po.tagIds" item="tagId" open="(" separator=","
						 close=")">
					#{tagId}
				</foreach>
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
	
	<select id="findStandardUnitTagBySuId" resultType="java.lang.String">
		SELECT t.`name` FROM tag t 
		LEFT JOIN standard_unit_tag sut on t.id = sut.tag_id
		WHERE sut.standard_unit_id = #{suId}
	</select>
</mapper>
	