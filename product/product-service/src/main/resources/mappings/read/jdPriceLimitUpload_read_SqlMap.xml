<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.product.dao.read.JdPriceLimitUploadReadDAO">
	<resultMap type="com.egeo.components.product.po.JdPriceLimitUploadPO" id="jdPriceLimitUploadMap">
		<result property="id" column="id" />
		<result property="jdPriceLimitStart" column="jd_price_limit_start" />
		<result property="jdPriceLimitEnd" column="jd_price_limit_end" />
	</resultMap>

	<sql id="jdPriceLimitUploadColumns">
		id,
		jd_price_limit_start,
		jd_price_limit_end
	</sql>

	<select id="findById" parameterType="com.egeo.components.product.po.JdPriceLimitUploadPO" resultMap="jdPriceLimitUploadMap">
		SELECT
		<include refid="jdPriceLimitUploadColumns" />
		FROM jd_price_limit_upload
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="jdPriceLimitUploadMap">
		SELECT
		<include refid="jdPriceLimitUploadColumns" />
		FROM jd_price_limit_upload
		<where>
			<if test="po.jdPriceLimitStart != null">
				and jd_price_limit_start = #{po.jdPriceLimitStart}
			</if>
			<if test="po.jdPriceLimitEnd != null">
				and jd_price_limit_end = #{po.jdPriceLimitEnd}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM jd_price_limit_upload
		<where>
			<if test="po.jdPriceLimitStart != null">
				and jd_price_limit_start = #{po.jdPriceLimitStart}
			</if>
			<if test="po.jdPriceLimitEnd != null">
				and jd_price_limit_end = #{po.jdPriceLimitEnd}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="jdPriceLimitUploadMap">
		SELECT
		<include refid="jdPriceLimitUploadColumns" />
		FROM jd_price_limit_upload
		<where>
			<if test="po.jdPriceLimitStart != null">
				and jd_price_limit_start = #{po.jdPriceLimitStart}
			</if>
			<if test="po.jdPriceLimitEnd != null">
				and jd_price_limit_end = #{po.jdPriceLimitEnd}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
</mapper>
	