<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.product.dao.read.MerchantProductStoreReadDAO">
	<resultMap type="com.egeo.components.product.po.MerchantProductStorePO" id="merchantProductStoreMap">
		<result property="id" column="id" />
		<result property="storeId" column="store_id" />
		<result property="merchantProductId" column="merchant_product_id" />
		<result property="platformId" column="platform_id" />
	</resultMap>

	<sql id="merchantProductStoreColumns">
		id,
		store_id,
		merchant_product_id,
		platform_id
	</sql>

	<select id="findById" parameterType="com.egeo.components.product.po.MerchantProductStorePO" resultMap="merchantProductStoreMap">
		SELECT
		<include refid="merchantProductStoreColumns" />
		FROM merchant_product_store
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="merchantProductStoreMap">
		SELECT
		<include refid="merchantProductStoreColumns" />
		FROM merchant_product_store
		<where>
			<if test="po.storeId != null">
				and store_id = #{po.storeId}
			</if>
			<if test="po.merchantProductId != null">
				and merchant_product_id = #{po.merchantProductId}
			</if>
			<if test="po.platformId != null">
				and platform_id = #{po.platformId}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM merchant_product_store
		<where>
			<if test="po.storeId != null">
				and store_id = #{po.storeId}
			</if>
			<if test="po.merchantProductId != null">
				and merchant_product_id = #{po.merchantProductId}
			</if>
			<if test="po.platformId != null">
				and platform_id = #{po.platformId}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="merchantProductStoreMap">
		SELECT
		<include refid="merchantProductStoreColumns" />
		FROM merchant_product_store
		<where>
			<if test="po.storeId != null">
				and store_id = #{po.storeId}
			</if>
			<if test="po.merchantProductId != null">
				and merchant_product_id = #{po.merchantProductId}
			</if>
			<if test="po.platformId != null">
				and platform_id = #{po.platformId}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
</mapper>
	