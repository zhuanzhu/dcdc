<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.product.dao.read.ProductDescriptionReadDAO">
	<resultMap type="com.egeo.components.product.po.ProductDescriptionPO" id="productDescriptionMap">
		<result property="id" column="id" />
		<result property="productId" column="product_id" />
		<result property="content" column="content" />
		<result property="platformId" column="platform_id" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />
	</resultMap>

	<sql id="productDescriptionColumns">
		id,
		product_id,
		content,
		platform_id,
		create_time,
		update_time
	</sql>

	<select id="findById" parameterType="com.egeo.components.product.po.ProductDescriptionPO" resultMap="productDescriptionMap">
		SELECT
		<include refid="productDescriptionColumns" />
		FROM product_description
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="productDescriptionMap">
		SELECT
		<include refid="productDescriptionColumns" />
		FROM product_description
		<where>
			<if test="po.productId != null">
				and product_id = #{po.productId}
			</if>
			<if test="po.content != null">
				and content = #{po.content}
			</if>
			<if test="po.platformId != null">
				and platform_id = #{po.platformId}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM product_description
		<where>
			<if test="po.productId != null">
				and product_id = #{po.productId}
			</if>
			<if test="po.content != null">
				and content = #{po.content}
			</if>
			<if test="po.platformId != null">
				and platform_id = #{po.platformId}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="productDescriptionMap">
		SELECT
		<include refid="productDescriptionColumns" />
		FROM product_description
		<where>
			<if test="po.productId != null">
				and product_id = #{po.productId}
			</if>
			<if test="po.content != null">
				and content = #{po.content}
			</if>
			<if test="po.platformId != null">
				and platform_id = #{po.platformId}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
</mapper>
	