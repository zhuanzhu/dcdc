<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.product.dao.read.ProductLimitProfitReadDAO">
	<resultMap type="com.egeo.components.product.po.ProductLimitProfitPO" id="productLimitProfitMap">
		<result property="id" column="id" />
		<result property="productLimitProfit" column="product_limit_profit" />
	</resultMap>

	<sql id="productLimitProfitColumns">
		id,
		product_limit_profit
	</sql>

	<select id="findById" parameterType="com.egeo.components.product.po.ProductLimitProfitPO" resultMap="productLimitProfitMap">
		SELECT
		<include refid="productLimitProfitColumns" />
		FROM product_limit_profit
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="productLimitProfitMap">
		SELECT
		<include refid="productLimitProfitColumns" />
		FROM product_limit_profit
		<where>
			<if test="po.productLimitProfit != null">
				and product_limit_profit = #{po.productLimitProfit}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM product_limit_profit
		<where>
			<if test="po.productLimitProfit != null">
				and product_limit_profit = #{po.productLimitProfit}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="productLimitProfitMap">
		SELECT
		<include refid="productLimitProfitColumns" />
		FROM product_limit_profit
		<where>
			<if test="po.productLimitProfit != null">
				and product_limit_profit = #{po.productLimitProfit}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
</mapper>
	