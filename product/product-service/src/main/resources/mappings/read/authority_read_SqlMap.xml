<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.product.dao.read.AuthorityReadDAO">
	<resultMap type="com.egeo.components.product.po.AuthorityPO" id="authorityMap">
		<result property="id" column="id" />
		<result property="authorityName" column="authority_name" />
		<result property="remarks" column="remarks" />
		<result property="platformId" column="platform_id" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />
	</resultMap>

	<sql id="authorityColumns">
		id,
		authority_name,
		remarks,
		platform_id,
		create_time,
		update_time
	</sql>

	<select id="findById" parameterType="com.egeo.components.product.po.AuthorityPO" resultMap="authorityMap">
		SELECT
		<include refid="authorityColumns" />
		FROM authority
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="authorityMap">
		SELECT
		<include refid="authorityColumns" />
		FROM authority
		<where>
			<if test="po.authorityName != null">
				and authority_name = #{po.authorityName}
			</if>
			<if test="po.remarks != null">
				and remarks = #{po.remarks}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM authority
		<where>
			<if test="po.authorityName != null">
				and authority_name = #{po.authorityName}
			</if>
			<if test="po.remarks != null">
				and remarks = #{po.remarks}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="authorityMap">
		SELECT
		<include refid="authorityColumns" />
		FROM authority
		<where>
			<if test="po.authorityName != null">
				and authority_name = #{po.authorityName}
			</if>
			<if test="po.remarks != null">
				and remarks = #{po.remarks}
			</if>

			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
</mapper>
	