<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.product.dao.read.SurSerachKeywordReadDAO">
	<resultMap type="com.egeo.components.product.po.SurSerachKeywordPO" id="surSerachKeywordMap">
		<result property="id" column="id" />
		<result property="standardUnitRecordId" column="standard_unit_record_id" />
		<result property="keyword" column="keyword" />
		<result property="platformId" column="platform_id" />
	</resultMap>

	<sql id="surSerachKeywordColumns">
		id,
		standard_unit_record_id,
		keyword,
		platform_id
	</sql>

	<select id="findById" parameterType="com.egeo.components.product.po.SurSerachKeywordPO" resultMap="surSerachKeywordMap">
		SELECT
		<include refid="surSerachKeywordColumns" />
		FROM sur_serach_keyword
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="surSerachKeywordMap">
		SELECT
		<include refid="surSerachKeywordColumns" />
		FROM sur_serach_keyword
		<where>
			<if test="po.standardUnitRecordId != null">
				and standard_unit_record_id = #{po.standardUnitRecordId}
			</if>
			<if test="po.keyword != null">
				and keyword = #{po.keyword}
			</if>
			<if test="po.platformId != null">
				and platform_id = #{po.platformId}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM sur_serach_keyword
		<where>
			<if test="po.standardUnitRecordId != null">
				and standard_unit_record_id = #{po.standardUnitRecordId}
			</if>
			<if test="po.keyword != null">
				and keyword = #{po.keyword}
			</if>
			<if test="po.platformId != null">
				and platform_id = #{po.platformId}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="surSerachKeywordMap">
		SELECT
		<include refid="surSerachKeywordColumns" />
		FROM sur_serach_keyword
		<where>
			<if test="po.standardUnitRecordId != null">
				and standard_unit_record_id = #{po.standardUnitRecordId}
			</if>
			<if test="po.keyword != null">
				and keyword = #{po.keyword}
			</if>
			<if test="po.platformId != null">
				and platform_id = #{po.platformId}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
</mapper>
	