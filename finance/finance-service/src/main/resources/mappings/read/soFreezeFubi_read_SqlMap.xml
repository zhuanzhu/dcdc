<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.finance.dao.read.SoFreezeFubiReadDAO">
	<resultMap type="com.egeo.components.finance.po.SoFreezeFubiPO" id="soFreezeFubiMap">
		<result property="id" column="id" />
		<result property="soId" column="so_id" />
		<result property="balance" column="balance" />
		<result property="createTime" column="create_time" />
		<result property="userId" column="user_id" />
	</resultMap>

	<sql id="soFreezeFubiColumns">
		id,
		so_id,
		balance,
		create_time,
		user_id
	</sql>

	<select id="findById" parameterType="com.egeo.components.finance.po.SoFreezeFubiPO" resultMap="soFreezeFubiMap">
		SELECT
		<include refid="soFreezeFubiColumns" />
		FROM so_freeze_fubi
		WHERE id = #{po.id}
	</select>
	
	<select id="findSoFreezeBalanceBySoId" resultType="java.math.BigDecimal">
		SELECT
		balance
		FROM so_freeze_fubi
		WHERE so_id = #{soId}
	</select>

	<select id="findOfPage" resultMap="soFreezeFubiMap">
		SELECT
		<include refid="soFreezeFubiColumns" />
		FROM so_freeze_fubi
		<where>
			<if test="po.soId != null">
				and so_id = #{po.soId}
			</if>
			<if test="po.balance != null">
				and balance = #{po.balance}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.userId != null">
				and user_id = #{po.userId}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
