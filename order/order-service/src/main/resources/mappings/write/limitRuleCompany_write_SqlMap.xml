<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.order.dao.write.LimitRuleCompanyWriteDAO">
	
	<sql id="inClause">
		<foreach collection="poList" item="po" separator=",">
				(#{po.limitRuleId},
				#{po.companyId})
		</foreach>
	</sql>
	
	<insert id="insertAll">
		INSERT INTO limit_rule_company(limit_rule_id,company_id) VALUES <include refid="inClause" />
	</insert>
	
	<insert id="insert" parameterType="com.egeo.components.order.po.LimitRuleCompanyPO">
		INSERT INTO limit_rule_company(
        <trim suffixOverrides=",">
			<if test="limitRuleId != null">
				limit_rule_id,
			</if>
			<if test="companyId != null">
				company_id,
			</if>
        </trim>		
		) VALUES (
        <trim suffixOverrides=",">
			<if test="limitRuleId != null">
				#{limitRuleId},
			</if>
			<if test="companyId != null">
				#{companyId},
			</if>
        </trim>		
		)
		<selectKey keyProperty="id" resultType="java.lang.Long">
			select LAST_INSERT_ID()
		</selectKey>
	</insert>


	
	
	<update id="update">
	UPDATE limit_rule_company 
		<set>
			<if test="limitRuleId != null">
				limit_rule_id = #{limitRuleId},
			</if>			
			<if test="companyId != null">
				company_id = #{companyId},
			</if>			
		</set>
			WHERE id = #{id}
	</update>	
	

	<delete id="delete">
		delete from limit_rule_company where id = #{id}
	</delete>

	<delete id="deleteByPara">
		delete from limit_rule_company 
		<where>
			<if test="limitRuleId != null">
				and limit_rule_id = #{limitRuleId}
			</if>
			<if test="companyId != null">
				and company_id = #{companyId}
			</if>
		</where>
	</delete>


</mapper>
	