<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.order.dao.read.PlatfromMenuReadDAO">
	<resultMap type="com.egeo.components.order.po.PlatfromMenuPO" id="platfromMenuMap">
		<result property="id" column="id" />
		<result property="menuCode" column="menu_code" />
		<result property="menuName" column="menu_name" />
		<result property="tabShow" column="tab_show" />
		<result property="platformId" column="platform_id" />
		<result property="updateTime" column="update_time" />
		<result property="createTime" column="create_time" />
	</resultMap>

	<sql id="platfromMenuColumns">
		id,
		menu_code,
		menu_name,
		tab_show,
		platform_id,
		update_time,
		create_time
	</sql>

	<select id="findById" parameterType="com.egeo.components.order.po.PlatfromMenuPO" resultMap="platfromMenuMap">
		SELECT
		<include refid="platfromMenuColumns" />
		FROM platfrom_menu
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="platfromMenuMap">
		SELECT
		<include refid="platfromMenuColumns" />
		FROM platfrom_menu
		<where>
			<if test="po.menuCode != null">
				and menu_code = #{po.menuCode}
			</if>
			<if test="po.menuName != null">
				and menu_name = #{po.menuName}
			</if>
			<if test="po.tabShow != null">
				and tab_show = #{po.tabShow}
			</if>
			<if test="po.platformId != null">
				and platform_id = #{po.platformId}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM platfrom_menu
		<where>
			<if test="po.menuCode != null">
