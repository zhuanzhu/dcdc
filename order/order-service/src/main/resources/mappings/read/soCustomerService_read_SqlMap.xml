<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.order.dao.read.SoCustomerServiceReadDAO">

	<select id="queryCustomerServiceBySoChildId" resultMap="soCustomerServiceMap">
		select * from so_customer_service
		where so_child_id=#{scId}
	</select>

	<resultMap type="com.egeo.components.order.po.SoCustomerServicePO" id="soCustomerServiceMap">
		<result property="id" column="id" />
		<result property="soChildId" column="so_child_id" />
		<result property="userName" column="user_name" />
		<result property="operateRemark" column="operate_remark" />
		<result property="creatTime" column="creat_time" />
		<result property="updateTime" column="update_time" />
		<result property="soId" column="so_id" />
		<result property="userRemark" column="user_remark" />
	</resultMap>

	<sql id="soCustomerServiceColumns">
		id,
		so_child_id,
		user_name,
		operate_remark,
		creat_time,
		update_time,
		so_id,
		user_remark
	</sql>

	<select id="findById" parameterType="com.egeo.components.order.po.SoCustomerServicePO" resultMap="soCustomerServiceMap">
		SELECT
		<include refid="soCustomerServiceColumns" />
		FROM so_customer_service
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="soCustomerServiceMap">
		SELECT
		<include refid="soCustomerServiceColumns" />
		FROM so_customer_service
		<where>
			<if test="po.soChildId != null">
				and so_child_id = #{po.soChildId}
			</if>
			<if test="po.userName != null">
				and user_name = #{po.userName}
			</if>
			<if test="po.operateRemark != null">
				and operate_remark = #{po.operateRemark}
			</if>
			<if test="po.creatTime != null">
				and creat_time = #{po.creatTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
			<if test="po.soId != null">
				and so_id = #{po.soId}
			</if>
			<if test="po.userRemark != null">
				and user_remark = #{po.userRemark}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM so_customer_service
		<where>
			<if test="po.soChildId != null">
				and so_child_id = #{po.soChildId}
			</if>
			<if test="po.userName != null">
				and user_name = #{po.userName}
			</if>
			<if test="po.operateRemark != null">
				and operate_remark = #{po.operateRemark}
			</if>
			<if test="po.creatTime != null">
				and creat_time = #{po.creatTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
			<if test="po.soId != null">
				and so_id = #{po.soId}
			</if>
			<if test="po.userRemark != null">
				and user_remark = #{po.userRemark}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="soCustomerServiceMap">
		SELECT
		<include refid="soCustomerServiceColumns" />
		FROM so_customer_service
		<where>
			<if test="po.soChildId != null">
				and so_child_id = #{po.soChildId}
			</if>
			<if test="po.userName != null">
				and user_name = #{po.userName}
			</if>
			<if test="po.operateRemark != null">
				and operate_remark = #{po.operateRemark}
			</if>
			<if test="po.creatTime != null">
				and creat_time = #{po.creatTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
			<if test="po.soId != null">
				and so_id = #{po.soId}
			</if>
			<if test="po.userRemark != null">
				and user_remark = #{po.userRemark}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
</mapper>
	