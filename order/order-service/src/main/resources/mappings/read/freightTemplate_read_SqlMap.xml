<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.order.dao.read.FreightTemplateReadDAO">
	<resultMap type="com.egeo.components.order.po.FreightTemplatePO" id="freightTemplateMap">
		<result property="id" column="id" />
		<result property="merchantId" column="merchant_id" />
		<result property="name" column="name" />
		<result property="type" column="type" />
		<result property="chargeWay" column="charge_way" />
		<result property="isDft" column="is_dft" />
		<result property="platformId" column="platform_id" />
		<result property="updateTime" column="update_time" />
		<result property="createTime" column="create_time" />
	</resultMap>

	<sql id="freightTemplateColumns">
		id,
		merchant_id,
		name,
		type,
		charge_way,
		is_dft,
		platform_id,
		update_time,
		create_time
	</sql>

	<select id="findById" parameterType="com.egeo.components.order.po.FreightTemplatePO" resultMap="freightTemplateMap">
		SELECT
		<include refid="freightTemplateColumns" />
		FROM freight_template
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="freightTemplateMap">
		SELECT
		<include refid="freightTemplateColumns" />
		FROM freight_template
		<where>
			<if test="po.merchantId != null">
				and merchant_id = #{po.merchantId}
			</if>
			<if test="po.name != null">
				and name = #{po.name}
			</if>
			<if test="po.type != null">
				and type = #{po.type}
			</if>
			<if test="po.chargeWay != null">
				and charge_way = #{po.chargeWay}
			</if>
			<if test="po.isDft != null">
				and is_dft = #{po.isDft}
			</if>
			<if test="po.platformId != null">
				and platform_id = #{po.platformId}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
