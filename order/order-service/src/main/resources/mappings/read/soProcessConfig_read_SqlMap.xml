<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.order.dao.read.SoProcessConfigReadDAO">
	<resultMap type="com.egeo.components.order.po.SoProcessConfigPO" id="soProcessConfigMap">
		<result property="id" column="id" />
		<result property="type" column="type" />
		<result property="templateName" column="template_name" />
		<result property="discription" column="discription" />
		<result property="platformId" column="platform_id" />
		<result property="updateTime" column="update_time" />
		<result property="createTime" column="create_time" />
	</resultMap>

	<sql id="soProcessConfigColumns">
		id,
		type,
		template_name,
		discription,
		platform_id,
		update_time,
		create_time
	</sql>

	<select id="findById" parameterType="com.egeo.components.order.po.SoProcessConfigPO" resultMap="soProcessConfigMap">
		SELECT
		<include refid="soProcessConfigColumns" />
		FROM so_process_config
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="soProcessConfigMap">
		SELECT
		<include refid="soProcessConfigColumns" />
		FROM so_process_config
		<where>
			<if test="po.type != null">
				and type = #{po.type}
			</if>
			<if test="po.templateName != null">
				and template_name = #{po.templateName}
			</if>
			<if test="po.discription != null">
				and discription = #{po.discription}
			</if>
			<if test="po.platformId != null">
				and platform_id = #{po.platformId}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM so_process_config
		<where>
			<if test="po.type != null">
				and type = #{po.type}
			</if>
			<if test="po.templateName != null">
				and template_name = #{po.templateName}
			</if>
			<if test="po.discription != null">
				and discription = #{po.discription}
			</if>
			<if test="po.platformId != null">
				and platform_id = #{po.platformId}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="soProcessConfigMap">
		SELECT
		<include refid="soProcessConfigColumns" />
		FROM so_process_config
		<where>
			<if test="po.type != null">
				and type = #{po.type}
			</if>
			<if test="po.templateName != null">
				and template_name = #{po.templateName}
			</if>
			<if test="po.discription != null">
				and discription = #{po.discription}
			</if>
			<if test="po.platformId != null">
				and platform_id = #{po.platformId}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
</mapper>
	