<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.order.dao.read.DeliveryFlowReadDAO">
	<resultMap type="com.egeo.components.order.po.DeliveryFlowPO" id="deliveryFlowMap">
		<result property="id" column="id" />
		<result property="soChildId" column="so_child_id" />
		<result property="operate" column="operate" />
		<result property="doMail" column="do_mail" />
		<result property="creatTime" column="creat_time" />
		<result property="updateTime" column="update_time" />
		<result property="soId" column="so_id" />
	</resultMap>

	<sql id="deliveryFlowColumns">
		id,
		so_child_id,
		operate,
		do_mail,
		creat_time,
		update_time,
		so_id
	</sql>

	<select id="findById" parameterType="com.egeo.components.order.po.DeliveryFlowPO" resultMap="deliveryFlowMap">
		SELECT
		<include refid="deliveryFlowColumns" />
		FROM delivery_flow
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="deliveryFlowMap">
		SELECT
		<include refid="deliveryFlowColumns" />
		FROM delivery_flow
		<where>
			<if test="po.soChildId != null">
				and so_child_id = #{po.soChildId}
			</if>
			<if test="po.operate != null">
				and operate = #{po.operate}
			</if>
			<if test="po.doMail != null">
				and do_mail = #{po.doMail}
			</if>
			<if test="po.creatTime != null">
				and creat_time = #{po.creatTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
			<if test="po.soId != null">
				and so_id = #{po.soId}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM delivery_flow
		<where>
			<if test="po.soChildId != null">
				and so_child_id = #{po.soChildId}
			</if>
			<if test="po.operate != null">
				and operate = #{po.operate}
			</if>
			<if test="po.doMail != null">
				and do_mail = #{po.doMail}
			</if>
			<if test="po.creatTime != null">
				and creat_time = #{po.creatTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
			<if test="po.soId != null">
				and so_id = #{po.soId}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="deliveryFlowMap">
		SELECT
		<include refid="deliveryFlowColumns" />
		FROM delivery_flow
		<where>
			<if test="po.soChildId != null">
				and so_child_id = #{po.soChildId}
			</if>
			<if test="po.operate != null">
				and operate = #{po.operate}
			</if>
			<if test="po.doMail != null">
				and do_mail = #{po.doMail}
			</if>
			<if test="po.creatTime != null">
				and creat_time = #{po.creatTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
			<if test="po.soId != null">
				and so_id = #{po.soId}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
</mapper>
	