<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.order.dao.read.SoMessageRelReadDAO">
	<resultMap type="com.egeo.components.order.po.SoMessageRelPO" id="soMessageRelMap">
		<result property="id" column="id" />
		<result property="orderCode" column="order_code" />
		<result property="messageid" column="messageId" />
		<result property="type" column="type" />
		<result property="platformId" column="platform_id" />
		<result property="updateTime" column="update_time" />
		<result property="createTime" column="create_time" />
	</resultMap>

	<sql id="soMessageRelColumns">
		id,
		order_code,
		messageId,
		type,
		platform_id,
		update_time,
		create_time
	</sql>

	<select id="findById" parameterType="com.egeo.components.order.po.SoMessageRelPO" resultMap="soMessageRelMap">
		SELECT
		<include refid="soMessageRelColumns" />
		FROM so_message_rel
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="soMessageRelMap">
		SELECT
		<include refid="soMessageRelColumns" />
		FROM so_message_rel
		<where>
			<if test="po.orderCode != null">
				and order_code = #{po.orderCode}
			</if>
			<if test="po.messageid != null">
				and messageId = #{po.messageid}
			</if>
			<if test="po.type != null">
				and type = #{po.type}
			</if>
			<if test="po.platformId != null">
				and platform_id = #{po.platformId}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM so_message_rel
		<where>
			<if test="po.orderCode != null">
				and order_code = #{po.orderCode}
			</if>
			<if test="po.messageid != null">
				and messageId = #{po.messageid}
			</if>
			<if test="po.type != null">
				and type = #{po.type}
			</if>
			<if test="po.platformId != null">
				and platform_id = #{po.platformId}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="soMessageRelMap">
		SELECT
		<include refid="soMessageRelColumns" />
		FROM so_message_rel
		<where>
			<if test="po.orderCode != null">
				and order_code = #{po.orderCode}
			</if>
			<if test="po.messageid != null">
				and messageId = #{po.messageid}
			</if>
			<if test="po.type != null">
				and type = #{po.type}
			</if>
			<if test="po.platformId != null">
				and platform_id = #{po.platformId}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
</mapper>
	