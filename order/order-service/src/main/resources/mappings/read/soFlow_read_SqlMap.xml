<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.order.dao.read.SoFlowReadDAO">

	<select id="queryFlowListBySoId" resultMap="soFlowMap">
		select * from so_flow
		where so_id=#{orderId}
	</select>

	<resultMap type="com.egeo.components.order.po.SoFlowPO" id="soFlowMap">
		<result property="id" column="id" />
		<result property="soId" column="so_id" />
		<result property="operate" column="operate" />
		<result property="operatorId" column="operator_id" />
		<result property="creatTime" column="creat_time" />
		<result property="updateTime" column="update_time" />
	</resultMap>

	<sql id="soFlowColumns">
		id,
		so_id,
		operate,
		operator_id,
		creat_time,
		update_time
	</sql>

	<select id="findById" parameterType="com.egeo.components.order.po.SoFlowPO" resultMap="soFlowMap">
		SELECT
		<include refid="soFlowColumns" />
		FROM so_flow
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="soFlowMap">
		SELECT
		<include refid="soFlowColumns" />
		FROM so_flow
		<where>
			<if test="po.soId != null">
				and so_id = #{po.soId}
			</if>
			<if test="po.operate != null">
				and operate = #{po.operate}
			</if>
			<if test="po.operatorId != null">
				and operator_id = #{po.operatorId}
			</if>
			<if test="po.creatTime != null">
				and creat_time = #{po.creatTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM so_flow
		<where>
			<if test="po.soId != null">
				and so_id = #{po.soId}
			</if>
			<if test="po.operate != null">
				and operate = #{po.operate}
			</if>
			<if test="po.operatorId != null">
				and operator_id = #{po.operatorId}
			</if>
			<if test="po.creatTime != null">
				and creat_time = #{po.creatTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="soFlowMap">
		SELECT
		<include refid="soFlowColumns" />
		FROM so_flow
		<where>
			<if test="po.soId != null">
				and so_id = #{po.soId}
			</if>
			<if test="po.operate != null">
				and operate = #{po.operate}
			</if>
			<if test="po.operatorId != null">
				and operator_id = #{po.operatorId}
			</if>
			<if test="po.creatTime != null">
				and creat_time = #{po.creatTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
</mapper>
	