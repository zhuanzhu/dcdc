	<resultMap type="com.egeo.components.third.po.PushOrderInfoPO" id="resultPoMap">
		<result property="id" column="id" />
		<result property="enterpriseId" column="enterprise_id" />
		<result property="bizCode" column="biz_code" />
		<result property="bizType" column="biz_type" />
		<result property="pushTime" column="push_time" />
		<result property="bizNo" column="biz_no" />
		<result property="pushState" column="push_state" />
		<result property="pushNum" column="push_num" />
		<result property="pushResult" column="push_result" />
		<result property="remarks" column="remarks" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />
