	<sql id="columnsSql">
		id,
		enterprise_id,
		biz_code,
		biz_type,
		push_time,
		biz_no,
		push_state,
		push_num,
		push_result,
		remarks,
		create_time,
		update_time
	</sql>


	<sql id="whereSql">
		<where>
			<if test="po.id != null">
				and id =  #{po.id}
			</if>
			<if test="po.enterpriseId != null">
				and enterprise_id = #{po.enterpriseId}
			</if>
			<if test="po.bizCode != null">
				and biz_code = #{po.bizCode}
			</if>
			<if test="po.bizType != null">
				and biz_type = #{po.bizType}
			</if>
			<if test="po.bizNo != null">
				and biz_no = #{po.bizNo}
			</if>
			<if test="po.pushState != null">
				and push_state = #{po.pushState}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
		</where>
	</sql>

	<sql id="tableNameId">
		push_order_info
	</sql>

	<sql id="inClause">
		in
		<foreach collection="ids" item="id" open="(" separator=","
				 close=")">
			#{id}
		</foreach>
	</sql>

