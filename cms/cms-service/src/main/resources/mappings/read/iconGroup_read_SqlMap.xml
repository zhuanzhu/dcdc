<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.cms.dao.read.IconGroupReadDAO">

	<select id="queryIconGroupByInstId" resultMap="iconGroupMap">
		select * from icon_group
		where inst_id=#{instId}
	</select>

	<resultMap type="com.egeo.components.cms.po.IconGroupPO" id="iconGroupMap">
		<result property="id" column="id" />
		<result property="count" column="count" />
		<result property="type" column="type" />
		<result property="instId" column="inst_id" />
		<result property="title" column="title" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />
	</resultMap>

	<sql id="iconGroupColumns">
		id,
		count,
		type,
		create_time,
		update_time,
		inst_id,
		title
	</sql>

	<select id="findById" parameterType="com.egeo.components.cms.po.IconGroupPO" resultMap="iconGroupMap">
		SELECT
		<include refid="iconGroupColumns" />
		FROM icon_group
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="iconGroupMap">
		SELECT
		<include refid="iconGroupColumns" />
		FROM icon_group
		<where>
			<if test="po.count != null">
				and count = #{po.count}
			</if>
			<if test="po.type != null">
				and type = #{po.type}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
			<if test="po.instId != null">
				and inst_id = #{po.instId}
			</if>
			<if test="po.title != null">
				and title = #{po.title}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM icon_group
		<where>
			<if test="po.count != null">
				and count = #{po.count}
			</if>
			<if test="po.type != null">
				and type = #{po.type}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
			<if test="po.instId != null">
				and inst_id = #{po.instId}
			</if>
			<if test="po.title != null">
				and title = #{po.title}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="iconGroupMap">
		SELECT
		<include refid="iconGroupColumns" />
		FROM icon_group
		<where>
			<if test="po.count != null">
				and count = #{po.count}
			</if>
			<if test="po.type != null">
				and type = #{po.type}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
			<if test="po.instId != null">
				and inst_id = #{po.instId}
			</if>
			<if test="po.title != null">
				and title = #{po.title}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
</mapper>
	