<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.cms.dao.read.NavigationBarCompanyReadDAO">
	<resultMap type="com.egeo.components.cms.po.NavigationBarCompanyPO" id="navigationBarCompanyMap">
		<result property="id" column="id" />
		<result property="navigationBarId" column="navigation_bar_id" />
		<result property="companyId" column="company_id" />
		<result property="updateTime" column="update_time" />
		<result property="createTime" column="create_time" />
	</resultMap>

	<sql id="navigationBarCompanyColumns">
		id,
		navigation_bar_id,
		company_id,
		update_time,
		create_time
	</sql>

	<select id="findById" parameterType="com.egeo.components.cms.po.NavigationBarCompanyPO" resultMap="navigationBarCompanyMap">
		SELECT
		<include refid="navigationBarCompanyColumns" />
		FROM navigation_bar_company
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="navigationBarCompanyMap">
		SELECT
		<include refid="navigationBarCompanyColumns" />
		FROM navigation_bar_company
		<where>
			<if test="po.navigationBarId != null">
				and navigation_bar_id = #{po.navigationBarId}
			</if>
			<if test="po.companyId != null">
				and company_id = #{po.companyId}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM navigation_bar_company
		<where>
			<if test="po.navigationBarId != null">
				and navigation_bar_id = #{po.navigationBarId}
			</if>
			<if test="po.companyId != null">
				and company_id = #{po.companyId}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="navigationBarCompanyMap">
		SELECT
		<include refid="navigationBarCompanyColumns" />
		FROM navigation_bar_company
		<where>
			<if test="po.navigationBarId != null">
				and navigation_bar_id = #{po.navigationBarId}
			</if>
			<if test="po.companyId != null">
				and company_id = #{po.companyId}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
	
	<select id="findPageTabAllByCompanyId" resultMap="navigationBarCompanyMap">
		SELECT navigation_bar_id FROM navigation_bar_company
		<where>
			<if test="companyIdList != null and companyIdList.size() > 0">
				company_id in 
				<foreach item="companyId" collection="companyIdList" separator="," open="(" close=")">
					#{companyId}
				</foreach>
			</if>
		</where>
	</select>
	
</mapper>
	