<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.cms.dao.read.LinkableButtonPageReadDAO">
	<resultMap type="com.egeo.components.cms.po.LinkableButtonPagePO" id="linkableButtonPageMap">
		<result property="id" column="id" />
		<result property="cmsPageId" column="cms_page_id" />
		<result property="clientType" column="client_type" />
		<result property="linkableId" column="linkable_id" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />
	</resultMap>
	
	<resultMap type="com.egeo.components.cms.condition.LinkableButtonPageCondition" id="linkableButtonPageCondition">
		<result property="id" column="id" />
		<result property="cmsPageId" column="cms_page_id" />
		<result property="clientType" column="client_type" />
		<result property="linkableId" column="linkable_id" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />
		<result property="pageName" column="page_name" />
	</resultMap>

	<sql id="linkableButtonPageColumns">
		id,
		cms_page_id,
		client_type,
		linkable_id,
		create_time,
		update_time
	</sql>
	
	<select id="findCmsPageByLinkableId" parameterType="com.egeo.components.cms.condition.LinkableButtonPageCondition" resultMap="linkableButtonPageCondition">
		SELECT
		lbp.id,
		lbp.cms_page_id,
		lbp.client_type,
		lbp.linkable_id,
		lbp.create_time,
		lbp.update_time,
		cp.page_name
		FROM linkable_button_page lbp
		left join cms_page cp on lbp.cms_page_id = cp.id
		WHERE linkable_id = #{linkableId}
	</select>

	<select id="findById" parameterType="com.egeo.components.cms.po.LinkableButtonPagePO" resultMap="linkableButtonPageMap">
		SELECT
		<include refid="linkableButtonPageColumns" />
		FROM linkable_button_page
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="linkableButtonPageMap">
		SELECT
		<include refid="linkableButtonPageColumns" />
		FROM linkable_button_page
		<where>
			<if test="po.cmsPageId != null">
				and cms_page_id = #{po.cmsPageId}
			</if>
			<if test="po.clientType != null">
				and client_type = #{po.clientType}
			</if>
			<if test="po.linkableId != null">
				and linkable_id = #{po.linkableId}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM linkable_button_page
		<where>
			<if test="po.cmsPageId != null">
				and cms_page_id = #{po.cmsPageId}
			</if>
			<if test="po.clientType != null">
				and client_type = #{po.clientType}
			</if>
			<if test="po.linkableId != null">
				and linkable_id = #{po.linkableId}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="linkableButtonPageMap">
		SELECT
		<include refid="linkableButtonPageColumns" />
		FROM linkable_button_page
		<where>
			<if test="po.cmsPageId != null">
				and cms_page_id = #{po.cmsPageId}
			</if>
			<if test="po.clientType != null">
				and client_type = #{po.clientType}
			</if>
			<if test="po.linkableId != null">
				and linkable_id = #{po.linkableId}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
</mapper>
	