<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.cms.dao.read.ImportTemplateDictReadDAO">
	<resultMap type="com.egeo.components.cms.po.ImportTemplateDictPO" id="importTemplateDictMap">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="type" column="type" />
		<result property="url" column="url" />
		<result property="content" column="content" />
		<result property="platformId" column="platform_id" />
	</resultMap>

	<sql id="importTemplateDictColumns">
		id,
		name,
		type,
		url,
		content,
		platform_id
	</sql>

	<select id="findById" parameterType="com.egeo.components.cms.po.ImportTemplateDictPO" resultMap="importTemplateDictMap">
		SELECT
		<include refid="importTemplateDictColumns" />
		FROM Import_template_dict
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="importTemplateDictMap">
		SELECT
		<include refid="importTemplateDictColumns" />
		FROM Import_template_dict
		<where>
			<if test="po.name != null">
				and name = #{po.name}
			</if>
			<if test="po.type != null">
				and type = #{po.type}
			</if>
			<if test="po.url != null">
				and url = #{po.url}
			</if>
			<if test="po.content != null">
				and content = #{po.content}
			</if>
			<if test="po.platformId != null">
				and platform_id = #{po.platformId}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM Import_template_dict
		<where>
			<if test="po.name != null">
				and name = #{po.name}
			</if>
			<if test="po.type != null">
				and type = #{po.type}
			</if>
			<if test="po.url != null">
				and url = #{po.url}
			</if>
			<if test="po.content != null">
				and content = #{po.content}
			</if>
			<if test="po.platformId != null">
				and platform_id = #{po.platformId}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="importTemplateDictMap">
		SELECT
		<include refid="importTemplateDictColumns" />
		FROM Import_template_dict
		<where>
			<if test="po.name != null">
				and name = #{po.name}
			</if>
			<if test="po.type != null">
				and type = #{po.type}
			</if>
			<if test="po.url != null">
				and url = #{po.url}
			</if>
			<if test="po.content != null">
				and content = #{po.content}
			</if>
			<if test="po.platformId != null">
				and platform_id = #{po.platformId}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
	
	<select id="findImportTemplateDictUrlByType" resultType="java.lang.String">
		SELECT
		url
		FROM Import_template_dict
		WHERE type = #{type} and platform_id = #{platformId}
	</select>
</mapper>
	