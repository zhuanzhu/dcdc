<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.cms.dao.read.ImagetextReadDAO">
	<select id="queryImagetextByGroupId" resultMap="imagetextMap">
		select * from imagetext
		where group_id=#{groupId}
		order by sort
	</select>

	<resultMap type="com.egeo.components.cms.po.ImagetextPO" id="imagetextMap">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="imgUrl" column="img_url" />
		<result property="linkableId" column="linkable_id" />
		<result property="sort" column="sort" />
		<result property="groupId" column="group_id" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />
	</resultMap>

	<sql id="imagetextColumns">
		id,
		img_url,
		linkable_id,
		sort,
		group_id,
		create_time,
		update_time,
		name
	</sql>

	<select id="findById" parameterType="com.egeo.components.cms.po.ImagetextPO" resultMap="imagetextMap">
		SELECT
		<include refid="imagetextColumns" />
		FROM imagetext
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="imagetextMap">
		SELECT
		<include refid="imagetextColumns" />
		FROM imagetext
		<where>
			<if test="po.imgUrl != null">
				and img_url = #{po.imgUrl}
			</if>
			<if test="po.linkableId != null">
				and linkable_id = #{po.linkableId}
			</if>
			<if test="po.sort != null">
				and sort = #{po.sort}
			</if>
			<if test="po.groupId != null">
				and group_id = #{po.groupId}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
			<if test="po.name != null">
				and name = #{po.name}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM imagetext
		<where>
			<if test="po.imgUrl != null">
				and img_url = #{po.imgUrl}
			</if>
			<if test="po.linkableId != null">
				and linkable_id = #{po.linkableId}
			</if>
			<if test="po.sort != null">
				and sort = #{po.sort}
			</if>
			<if test="po.groupId != null">
				and group_id = #{po.groupId}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
			<if test="po.name != null">
				and name = #{po.name}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="imagetextMap">
		SELECT
		<include refid="imagetextColumns" />
		FROM imagetext
		<where>
			<if test="po.imgUrl != null">
				and img_url = #{po.imgUrl}
			</if>
			<if test="po.linkableId != null">
				and linkable_id = #{po.linkableId}
			</if>
			<if test="po.sort != null">
				and sort = #{po.sort}
			</if>
			<if test="po.groupId != null">
				and group_id = #{po.groupId}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
			<if test="po.name != null">
				and name = #{po.name}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
</mapper>
	