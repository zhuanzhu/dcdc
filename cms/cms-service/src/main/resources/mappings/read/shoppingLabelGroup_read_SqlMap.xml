<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.cms.dao.read.ShoppingLabelGroupReadDAO">


	<select id="queryShoppingLabelGroupByInstId" resultMap="shoppingLabelGroupMap">
		select * from shopping_label_group
		where inst_id=#{instId}
	</select>

	<resultMap type="com.egeo.components.cms.po.ShoppingLabelGroupPO" id="shoppingLabelGroupMap">
		<result property="id" column="id" />
		<result property="type" column="type" />
		<result property="imgUrl" column="img_url" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />
		<result property="instId" column="inst_id" />
	</resultMap>

	<sql id="shoppingLabelGroupColumns">
		id,
		type,
		img_url,
		create_time,
		update_time,
		inst_id
	</sql>

	<select id="findById" parameterType="com.egeo.components.cms.po.ShoppingLabelGroupPO" resultMap="shoppingLabelGroupMap">
		SELECT
		<include refid="shoppingLabelGroupColumns" />
		FROM shopping_label_group
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="shoppingLabelGroupMap">
		SELECT
		<include refid="shoppingLabelGroupColumns" />
		FROM shopping_label_group
		<where>
			<if test="po.type != null">
				and type = #{po.type}
			</if>
			<if test="po.imgUrl != null">
				and img_url = #{po.imgUrl}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
			<if test="po.instId != null">
				and inst_id = #{po.instId}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM shopping_label_group
		<where>
			<if test="po.type != null">
				and type = #{po.type}
			</if>
			<if test="po.imgUrl != null">
				and img_url = #{po.imgUrl}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
			<if test="po.instId != null">
				and inst_id = #{po.instId}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="shoppingLabelGroupMap">
		SELECT
		<include refid="shoppingLabelGroupColumns" />
		FROM shopping_label_group
		<where>
			<if test="po.type != null">
				and type = #{po.type}
			</if>
			<if test="po.imgUrl != null">
				and img_url = #{po.imgUrl}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
			<if test="po.instId != null">
				and inst_id = #{po.instId}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
</mapper>
	