<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.cms.dao.read.IconCompanyReadDAO">

	<select id="queryIconCompanysByIconIdAndCompanyId" resultMap="iconCompanyMap">
		select * from icon_company
		where company_id in (-1,#{companyId})
		and icon_id=#{id}
	</select>

	<resultMap type="com.egeo.components.cms.po.IconCompanyPO" id="iconCompanyMap">
		<result property="id" column="id" />
		<result property="iconId" column="icon_id" />
		<result property="companyId" column="company_id" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />
	</resultMap>

	<sql id="iconCompanyColumns">
		id,
		icon_id,
		company_id,
		create_time,
		update_time
	</sql>

	<select id="findById" parameterType="com.egeo.components.cms.po.IconCompanyPO" resultMap="iconCompanyMap">
		SELECT
		<include refid="iconCompanyColumns" />
		FROM icon_company
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="iconCompanyMap">
		SELECT
		<include refid="iconCompanyColumns" />
		FROM icon_company
		<where>
			<if test="po.iconId != null">
				and icon_id = #{po.iconId}
			</if>
			<if test="po.companyId != null">
				and company_id = #{po.companyId}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM icon_company
		<where>
			<if test="po.iconId != null">
				and icon_id = #{po.iconId}
			</if>
			<if test="po.companyId != null">
				and company_id = #{po.companyId}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="iconCompanyMap">
		SELECT
		<include refid="iconCompanyColumns" />
		FROM icon_company
		<where>
			<if test="po.iconId != null">
				and icon_id = #{po.iconId}
			</if>
			<if test="po.companyId != null">
				and company_id = #{po.companyId}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
</mapper>
	