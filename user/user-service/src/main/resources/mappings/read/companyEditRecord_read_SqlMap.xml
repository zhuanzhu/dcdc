<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.user.dao.read.CompanyEditRecordReadDAO">
	<resultMap type="com.egeo.components.user.po.CompanyEditRecordPO" id="companyEditRecordMap">
		<result property="id" column="id" />
		<result property="companyId" column="company_id" />
		<result property="companyName" column="company_name" />
		<result property="userId" column="user_id" />
		<result property="userName" column="user_name" />
		<result property="editTime" column="edit_time" />
		<result property="platformId" column="platform_id" />
	</resultMap>

	<sql id="companyEditRecordColumns">
		id,
		company_id,
		company_name,
		user_id,
		user_name,
		edit_time,
		platform_id
	</sql>

	<select id="findById" parameterType="com.egeo.components.user.po.CompanyEditRecordPO" resultMap="companyEditRecordMap">
		SELECT
		<include refid="companyEditRecordColumns" />
		FROM u_company_edit_record
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="companyEditRecordMap">
		SELECT
		<include refid="companyEditRecordColumns" />
		FROM u_company_edit_record
		<where>
			<if test="po.companyId != null">
				and company_id = #{po.companyId}
			</if>
			<if test="po.companyName != null">
				and company_name = #{po.companyName}
			</if>
			<if test="po.userId != null">
				and user_id = #{po.userId}
			</if>
			<if test="po.userName != null">
				and user_name = #{po.userName}
			</if>
			<if test="po.editTime != null">
				and edit_time = #{po.editTime}
			</if>
			<if test="po.platformId != null">
				and platform_id = #{po.platformId}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
