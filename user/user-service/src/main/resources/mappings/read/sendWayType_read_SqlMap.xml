<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.user.dao.read.SendWayTypeReadDAO">
	<resultMap type="com.egeo.components.user.po.SendWayTypePO" id="sendWayTypeMap">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="createTime" column="create_time" />
	</resultMap>

	<sql id="sendWayTypeColumns">
		id,
		name,
		create_time
	</sql>

	<select id="findById" parameterType="com.egeo.components.user.po.SendWayTypePO" resultMap="sendWayTypeMap">
		SELECT
		<include refid="sendWayTypeColumns" />
		FROM u_send_way_type
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="sendWayTypeMap">
		SELECT
		<include refid="sendWayTypeColumns" />
		FROM u_send_way_type
		<where>
			<if test="po.name != null">
				and name = #{po.name}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM u_send_way_type
		<where>
			<if test="po.name != null">
				and name = #{po.name}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="sendWayTypeMap">
		SELECT
		<include refid="sendWayTypeColumns" />
		FROM u_send_way_type
		<where>
			<if test="po.name != null">
				and name = #{po.name}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
	
	<select id="findSendWayTypeByInfoId" resultType="java.lang.String">
		SELECT swt.name from u_send_way_type swt,(SELECT send_way_id from u_info_send_way WHERE info_template_id = #{infoId}) isw
		WHERE isw.send_way_id = swt.id
	</select>
</mapper>
	