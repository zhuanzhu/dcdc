<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.user.dao.read.UserInformationReadReadDAO">
	<resultMap type="com.egeo.components.user.po.UserInformationReadPO" id="userInformationReadMap">
		<result property="id" column="id" />
		<result property="userId" column="user_id" />
		<result property="userInformationId" column="user_information_id" />
		<result property="isDeleted" column="is_deleted" />
	</resultMap>

	<sql id="userInformationReadColumns">
		id,
		user_id,
		user_information_id,
		is_deleted
	</sql>

	<select id="findById" parameterType="com.egeo.components.user.po.UserInformationReadPO" resultMap="userInformationReadMap">
		SELECT
		<include refid="userInformationReadColumns" />
		FROM u_user_information_read
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="userInformationReadMap">
		SELECT
		<include refid="userInformationReadColumns" />
		FROM u_user_information_read
		<where>
			<if test="po.userId != null">
				and user_id = #{po.userId}
			</if>
			<if test="po.userInformationId != null">
				and user_information_id = #{po.userInformationId}
			</if>
			<if test="po.isDeleted != null">
				and is_deleted = #{po.isDeleted}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM u_user_information_read
		<where>
			<if test="po.userId != null">
				and user_id = #{po.userId}
			</if>
			<if test="po.userInformationId != null">
				and user_information_id = #{po.userInformationId}
			</if>
			<if test="po.isDeleted != null">
				and is_deleted = #{po.isDeleted}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="userInformationReadMap">
		SELECT
		<include refid="userInformationReadColumns" />
		FROM u_user_information_read
		<where>
			<if test="po.userId != null">
				and user_id = #{po.userId}
			</if>
			<if test="po.userInformationId != null">
				and user_information_id = #{po.userInformationId}
			</if>
			<if test="po.isDeleted != null">
				and is_deleted = #{po.isDeleted}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
</mapper>
	