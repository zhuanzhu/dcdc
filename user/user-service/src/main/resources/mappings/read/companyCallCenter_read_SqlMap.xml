<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.user.dao.read.CompanyCallCenterReadDAO">
	<resultMap type="com.egeo.components.user.po.CompanyCallCenterPO" id="companyCallCenterMap">
		<result property="id" column="id" />
		<result property="companyId" column="company_id" />
		<result property="callCenterPhone" column="call_center_phone" />
		<result property="companyQq" column="company_qq" />
		<result property="companyWeixin" column="company_weixin" />
	</resultMap>

	<sql id="companyCallCenterColumns">
		id,
		company_id,
		call_center_phone,
		company_qq,
		company_weixin
	</sql>

	<select id="findById" parameterType="com.egeo.components.user.po.CompanyCallCenterPO" resultMap="companyCallCenterMap">
		SELECT
		<include refid="companyCallCenterColumns" />
		FROM u_company_call_center
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="companyCallCenterMap">
		SELECT
		<include refid="companyCallCenterColumns" />
		FROM u_company_call_center
		<where>
			<if test="po.companyId != null">
				and company_id = #{po.companyId}
			</if>
			<if test="po.callCenterPhone != null">
				and call_center_phone = #{po.callCenterPhone}
			</if>
			<if test="po.companyQq != null">
				and company_qq = #{po.companyQq}
			</if>
			<if test="po.companyWeixin != null">
				and company_weixin = #{po.companyWeixin}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM u_company_call_center
		<where>
			<if test="po.companyId != null">
				and company_id = #{po.companyId}
			</if>
			<if test="po.callCenterPhone != null">
				and call_center_phone = #{po.callCenterPhone}
			</if>
			<if test="po.companyQq != null">
				and company_qq = #{po.companyQq}
			</if>
			<if test="po.companyWeixin != null">
				and company_weixin = #{po.companyWeixin}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="companyCallCenterMap">
		SELECT
		<include refid="companyCallCenterColumns" />
		FROM u_company_call_center
		<where>
			<if test="po.companyId != null">
				and company_id = #{po.companyId}
			</if>
			<if test="po.callCenterPhone != null">
				and call_center_phone = #{po.callCenterPhone}
			</if>
			<if test="po.companyQq != null">
				and company_qq = #{po.companyQq}
			</if>
			<if test="po.companyWeixin != null">
				and company_weixin = #{po.companyWeixin}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
</mapper>
	