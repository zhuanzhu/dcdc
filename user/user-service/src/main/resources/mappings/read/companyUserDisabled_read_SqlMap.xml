<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.user.dao.read.CompanyUserDisabledReadDAO">
	<resultMap type="com.egeo.components.user.po.CompanyUserDisabledPO" id="companyUserDisabledMap">
		<result property="id" column="id" />
		<result property="companyId" column="company_id" />
		<result property="userId" column="user_id" />
		<result property="disabledTime" column="disabled_time" />
		<result property="revalidation" column="revalidation" />
	</resultMap>

	<sql id="companyUserDisabledColumns">
		id,
		company_id,
		user_id,
		disabled_time,
		revalidation
	</sql>

	<select id="findById" parameterType="com.egeo.components.user.po.CompanyUserDisabledPO" resultMap="companyUserDisabledMap">
		SELECT
		<include refid="companyUserDisabledColumns" />
		FROM u_company_user_disabled
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="companyUserDisabledMap">
		SELECT
		<include refid="companyUserDisabledColumns" />
		FROM u_company_user_disabled
		<where>
			<if test="po.companyId != null">
				and company_id = #{po.companyId}
			</if>
			<if test="po.userId != null">
				and user_id = #{po.userId}
			</if>
			<if test="po.disabledTime != null">
				and disabled_time = #{po.disabledTime}
			</if>
			<if test="po.revalidation != null">
				and revalidation = #{po.revalidation}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM u_company_user_disabled
		<where>
			<if test="po.companyId != null">
				and company_id = #{po.companyId}
			</if>
			<if test="po.userId != null">
				and user_id = #{po.userId}
			</if>
			<if test="po.disabledTime != null">
				and disabled_time = #{po.disabledTime}
			</if>
			<if test="po.revalidation != null">
				and revalidation = #{po.revalidation}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="companyUserDisabledMap">
		SELECT
		<include refid="companyUserDisabledColumns" />
		FROM u_company_user_disabled
		<where>
			<if test="po.companyId != null">
				and company_id = #{po.companyId}
			</if>
			<if test="po.userId != null">
				and user_id = #{po.userId}
			</if>
			<if test="po.disabledTime != null">
				and disabled_time = #{po.disabledTime}
			</if>
			<if test="po.revalidation != null">
				and revalidation = #{po.revalidation}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>

	<select id="findRevalidationByCompanyId" resultType="java.lang.Integer">
		SELECT revalidation
		FROM u_company_user_disabled
		WHERE company_id = #{companyId}
		ORDER BY disabled_time DESC
		LIMIT 1
	</select>

	<select id="findUsersByCompanyId" resultType="java.lang.Long">
		SELECT DISTINCT(user_id)
		FROM u_company_user_disabled
		WHERE company_id = #{companyId}
		ORDER BY id desc
	</select>
</mapper>
	