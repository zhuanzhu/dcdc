<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.user.dao.read.InfoTemplateParameterReadDAO">
	<resultMap type="com.egeo.components.user.po.InfoTemplateParameterPO" id="infoTemplateParameterMap">
		<result property="id" column="id" />
		<result property="infoTemplateId" column="info_template_id" />
		<result property="name" column="name" />
	</resultMap>

	<sql id="infoTemplateParameterColumns">
		id,
		info_template_id,
		name
	</sql>

	<select id="findById" parameterType="com.egeo.components.user.po.InfoTemplateParameterPO" resultMap="infoTemplateParameterMap">
		SELECT
		<include refid="infoTemplateParameterColumns" />
		FROM u_info_template_parameter
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="infoTemplateParameterMap">
		SELECT
		<include refid="infoTemplateParameterColumns" />
		FROM u_info_template_parameter
		<where>
			<if test="po.infoTemplateId != null">
				and info_template_id = #{po.infoTemplateId}
			</if>
			<if test="po.name != null">
				and name = #{po.name}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM u_info_template_parameter
		<where>
			<if test="po.infoTemplateId != null">
				and info_template_id = #{po.infoTemplateId}
			</if>
			<if test="po.name != null">
				and name = #{po.name}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="infoTemplateParameterMap">
		SELECT
		<include refid="infoTemplateParameterColumns" />
		FROM u_info_template_parameter
		<where>
			<if test="po.infoTemplateId != null">
				and info_template_id = #{po.infoTemplateId}
			</if>
			<if test="po.name != null">
				and name = #{po.name}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
</mapper>
	