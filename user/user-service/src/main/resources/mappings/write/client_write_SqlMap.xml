<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.user.dao.write.ClientWriteDAO">
	<insert id="insert" parameterType="com.egeo.components.user.po.ClientPO">
		INSERT INTO u_client(
        <trim suffixOverrides=",">
			<if test="name != null">
				name,
			</if>
			<if test="description != null">
				description,
			</if>
			<if test="clientPayTypeRemarks != null">
				client_pay_type_remarks,
			</if>
			<if test="createTime != null">
				create_time,
			</if>
			<if test="updateTime != null">
				update_time,
			</if>
        </trim>		
		) VALUES (
        <trim suffixOverrides=",">
			<if test="name != null">
				#{name},
			</if>
			<if test="description != null">
				#{description},
			</if>
			<if test="clientPayTypeRemarks != null">
				#{clientPayTypeRemarks},
			</if>
			<if test="createTime != null">
				#{createTime},
			</if>
			<if test="updateTime != null">
				#{updateTime},
			</if>
        </trim>		
		)
		<selectKey keyProperty="id" resultType="java.lang.Long">
			select LAST_INSERT_ID()
		</selectKey>
	</insert>


	
	
	<update id="update">
	UPDATE u_client 
		<set>
			<if test="name != null">
				name = #{name},
			</if>			
			<if test="description != null">
				description = #{description},
			</if>
			<if test="clientPayTypeRemarks != null">
				client_pay_type_remarks=#{clientPayTypeRemarks},
			</if>

			<if test="createTime != null">
				create_time = #{createTime},
			</if>			
			<if test="updateTime != null">
				update_time = #{updateTime},
			</if>			
		</set>
			WHERE id = #{id}
	</update>	
	

	<delete id="delete">
		delete from u_client where id = #{id}
	</delete>

	<delete id="deleteByPara">
		delete from u_client 
		<where>
			<if test="name != null">
				and name = #{name}
			</if>
			<if test="description != null">
				and description = #{description}
			</if>
			<if test="clientPayTypeRemarks != null">
				client_pay_type_remarks=#{clientPayTypeRemarks},
			</if>
			<if test="createTime != null">
				and create_time = #{createTime}
			</if>
			<if test="updateTime != null">
				and update_time = #{updateTime}
			</if>
		</where>
	</delete>


</mapper>
	