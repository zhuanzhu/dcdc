	<insert id="insert" parameterType="com.egeo.components.promotion.po.PraisePointPO">
		INSERT INTO praise_point(
        <trim suffixOverrides=",">
			<if test="userId != null">
				user_id,
			</if>
			<if test="praisePoint != null">
				praise_point,
			</if>
			<if test="ciphertext != null">
				ciphertext,
			</if>
			<if test="uuid != null">
				uuid,
