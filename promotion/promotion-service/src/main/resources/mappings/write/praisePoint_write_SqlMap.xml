			<if test="createTime != null">
				create_time = #{createTime},
			</if>			
			<if test="updateTime != null">
				update_time = #{updateTime},
			</if>			
		</set>
			WHERE id = #{id}
	</update>	
	

	<delete id="delete">
		delete from praise_point where id = #{id}
	</delete>

	<delete id="deleteByPara">
		delete from praise_point 
		<where>
			<if test="userId != null">
				and user_id = #{userId}
			</if>
			<if test="praisePoint != null">
