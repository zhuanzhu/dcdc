			<if test="createTime != null">
				create_time,
			</if>
			<if test="updateTime != null">
				update_time,
			</if>
        </trim>		
		) VALUES (
        <trim suffixOverrides=",">
			<if test="userId != null">
				#{userId},
			</if>
			<if test="praisePoint != null">
				#{praisePoint},
			</if>
			<if test="ciphertext != null">
				#{ciphertext},
