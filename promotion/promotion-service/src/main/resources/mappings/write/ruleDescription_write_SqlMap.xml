<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.promotion.dao.write.RuleDescriptionWriteDAO">
	<insert id="insert" parameterType="com.egeo.components.promotion.po.RuleDescriptionPO">
		INSERT INTO rule_description(
        <trim suffixOverrides=",">
			<if test="description != null">
				description,
			</if>
			<if test="platformId != null">
				platform_id,
			</if>
        </trim>		
		) VALUES (
        <trim suffixOverrides=",">
			<if test="description != null">
				#{description},
			</if>
			<if test="platformId != null">
				#{platformId},
			</if>
        </trim>		
		)
		<selectKey keyProperty="id" resultType="java.lang.Long">
			select LAST_INSERT_ID()
		</selectKey>
	</insert>


	
	
	<update id="update">
	UPDATE rule_description 
		<set>
			<if test="description != null">
				description = #{description},
			</if>
			<if test="platformId != null">
				platform_id = #{platformId},
			</if>
		</set>
			WHERE id = #{id}
	</update>	
	

	<delete id="delete">
		delete from rule_description where id = #{id}
	</delete>

	<delete id="deleteByPara">
		delete from rule_description 
		<where>
			<if test="description != null">
				and description = #{description}
			</if>
			<if test="platformId != null">
				and platform_id = #{platformId}
			</if>
		</where>
	</delete>


</mapper>
	