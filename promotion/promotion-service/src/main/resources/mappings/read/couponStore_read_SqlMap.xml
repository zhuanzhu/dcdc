<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.promotion.dao.read.CouponStoreReadDAO">
	<resultMap type="com.egeo.components.promotion.po.CouponStorePO" id="couponStoreMap">
		<result property="id" column="id" />
		<result property="couponId" column="coupon_id" />
		<result property="storeId" column="store_id" />
		<result property="createTime" column="create_time" />
	</resultMap>

	<sql id="couponStoreColumns">
		id,
		coupon_id,
		store_id,
		create_time
	</sql>

	<select id="findById" parameterType="com.egeo.components.promotion.po.CouponStorePO" resultMap="couponStoreMap">
		SELECT
		<include refid="couponStoreColumns" />
		FROM coupon_store
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="couponStoreMap">
		SELECT
		<include refid="couponStoreColumns" />
		FROM coupon_store
		<where>
			<if test="po.couponId != null">
				and coupon_id = #{po.couponId}
			</if>
			<if test="po.storeId != null">
				and store_id = #{po.storeId}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM coupon_store
		<where>
			<if test="po.couponId != null">
				and coupon_id = #{po.couponId}
			</if>
			<if test="po.storeId != null">
				and store_id = #{po.storeId}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
		</where>
	</select>

	<select id="findCouponStoreCountByCouponIdAndStoreId" resultType="java.lang.Long">
		SELECT
		count(1) cnt
		FROM coupon_store
		<where>
			<if test="couponStorePO.couponId != null">
				and coupon_id = #{couponStorePO.couponId}
			</if>
			<if test="couponStorePO.storeId != null">
				and store_id = #{couponStorePO.storeId}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="couponStoreMap">
		SELECT
		<include refid="couponStoreColumns" />
		FROM coupon_store
		<where>
			<if test="po.couponId != null">
				and coupon_id = #{po.couponId}
			</if>
			<if test="po.storeId != null">
				and store_id = #{po.storeId}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
</mapper>
	