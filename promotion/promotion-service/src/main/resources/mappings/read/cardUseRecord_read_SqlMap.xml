<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.promotion.dao.read.CardUseRecordReadDAO">

	<resultMap type="com.egeo.components.promotion.po.CardUseRecordPO" id="resultPoMap">
		<result property="id" column="id" />
		<result property="cardNo" column="card_no" />
		<result property="cardName" column="card_name" />
		<result property="userId" column="user_id" />
		<result property="cardId" column="card_id" />
		<result property="useAmount" column="use_amount" />
		<result property="soId" column="so_id" />
		<result property="companyId" column="company_id" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />
		<result property="orderCode" column="order_code" />
		<result property="cardType" column="card_type" />
		<result property="settleMethod" column="settle_method" />
	</resultMap>

	<sql id="columnsSql">
		id,
		card_no,
		card_name,
		user_id,
		card_id,
		use_amount,
		so_id,
		company_id,
		create_time,
		update_time,
		order_code,
		settle_method,
		card_type
	</sql>


	<sql id="whereSql">
		<where>
			<if test="po.id != null">
				and id =  #{po.id}
			</if>
			<if test="po.cardNo != null">
				and card_no = #{po.cardNo}
			</if>
			<if test="po.userId != null">
				and user_id = #{po.userId}
			</if>
			<if test="po.cardId != null">
				and card_id = #{po.cardId}
			</if>
			<if test="po.soId != null">
				and so_id = #{po.soId}
			</if>
			<if test="po.companyId != null">
				and company_id = #{po.companyId}
			</if>
			<if test="po.orderCode != null">
				and order_code = #{po.orderCode}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
			<if test="po.startTime!=null">
				and create_time>=#{po.startTime}
			</if>
			<if test="po.endTime!=null">
				and #{po.endTime}  >= create_time
			</if>
			<if test="po.cardNameLike != null">
				AND card_name LIKE CONCAT('%',#{po.cardNameLike},'%')
			</if>
			<if test="po.cardNoLike != null">
				AND card_no LIKE CONCAT('%',#{po.cardNoLike},'%')
			</if>
			<if test="po.orderCodeLike != null">
				AND order_code LIKE CONCAT('%',#{po.orderCodeLike},'%')
			</if>
			<if test="po.cardType != null">
				and card_type = #{po.cardType}
			</if>
			<if test="po.settleMethod != null">
				and settle_method = #{po.settleMethod}
			</if>
		</where>
	</sql>

	<sql id="tableNameId">
		card_use_record
	</sql>

	<sql id="inClause">
		in
		<foreach collection="ids" item="id" open="(" separator=","
				 close=")">
			#{id}
		</foreach>
	</sql>

	<select id="findById" parameterType="com.egeo.components.promotion.po.CardUseRecordPO" resultMap="resultPoMap">
		SELECT
		<include refid="columnsSql" />
		FROM
		<include refid="tableNameId" />
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="resultPoMap">
		SELECT
			<include refid="columnsSql" />
		FROM
			<include refid="tableNameId" />
			<include refid="whereSql"/>
			<choose>
				<when test="page !=null and page.orderBy != null and page.orderBy != ''">
					ORDER BY ${page.orderBy}
				</when>
				<otherwise>
					ORDER BY id desc
				</otherwise>
			</choose>
			<if test="page != null">
			limit #{page.limitStart},#{page.pageSize}
			</if>
	</select>

	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
			count(1) cnt
		FROM
			<include refid="tableNameId" />
			<include refid="whereSql"/>
	</select>

	<select id="findAll" resultMap="resultPoMap">
		SELECT
		<include refid="columnsSql" />
		FROM
		<include refid="tableNameId" />
		<include refid="whereSql"/>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
				ORDER BY id desc
			</otherwise>
		</choose>
	</select>
</mapper>
