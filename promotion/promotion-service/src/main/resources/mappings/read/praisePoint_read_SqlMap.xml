<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.promotion.dao.read.PraisePointReadDAO">
	<select id="queryPraisePointByUserId" resultMap="praisePointMap">
		select * from praise_point
		where user_id=#{userId}
	</select>

	<resultMap type="com.egeo.components.promotion.po.PraisePointPO" id="praisePointMap">
		<result property="id" column="id" />
		<result property="userId" column="user_id" />
		<result property="praisePoint" column="praise_point" />
		<result property="ciphertext" column="ciphertext" />
		<result property="uuid" column="uuid" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />
	</resultMap>

	<sql id="praisePointColumns">
		id,
		user_id,
		praise_point,
		ciphertext,
		uuid,
		create_time,
		update_time
	</sql>

	<select id="findById" parameterType="com.egeo.components.promotion.po.PraisePointPO" resultMap="praisePointMap">
		SELECT
		<include refid="praisePointColumns" />
		FROM praise_point
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="praisePointMap">
		SELECT
		<include refid="praisePointColumns" />
		FROM praise_point
		<where>
			<if test="po.userId != null">
				and user_id = #{po.userId}
			</if>
			<if test="po.praisePoint != null">
				and praise_point = #{po.praisePoint}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM praise_point
		<where>
			<if test="po.userId != null">
				and user_id = #{po.userId}
			</if>
			<if test="po.praisePoint != null">
				and praise_point = #{po.praisePoint}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="praisePointMap">
		SELECT
		<include refid="praisePointColumns" />
		FROM praise_point
		<where>
			<if test="po.userId != null">
				and user_id = #{po.userId}
			</if>
			<if test="po.praisePoint != null">
				and praise_point = #{po.praisePoint}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.updateTime != null">
				and update_time = #{po.updateTime}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
</mapper>
	