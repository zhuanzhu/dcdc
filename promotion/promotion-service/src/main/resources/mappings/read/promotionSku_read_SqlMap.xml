			</if>
			<if test="po.mpId != null">
				and mp_id = #{po.mpId}
			</if>
			<if test="po.platformId != null">
				and platform_id = #{po.platformId}
			</if>
			<if test="po.skuId != null">
				and sku_id = #{po.skuId}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="promotionSkuMap">
		SELECT
		<include refid="promotionSkuColumns" />
		FROM promotion_sku
		<where>
			<if test="po.promotionId != null">
				and promotion_id = #{po.promotionId}
			</if>
			<if test="po.synStatus != null">
