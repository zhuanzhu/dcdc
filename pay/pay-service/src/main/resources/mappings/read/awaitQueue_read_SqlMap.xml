<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.components.pay.dao.read.AwaitQueueReadDAO">
	<resultMap type="com.egeo.components.pay.po.AwaitQueuePO" id="awaitQueueMap">
		<result property="id" column="id" />
		<result property="soId" column="so_id" />
		<result property="orderCode" column="order_code" />
		<result property="createTime" column="create_time" />
		<result property="cashPayType" column="cash_pay_type" />
		<result property="randomNumber" column="random_number" />
		<result property="isPayTrue" column="is_pay_true" />
	</resultMap>

	<select id="queryAwaitQueueByOrderId" resultMap="awaitQueueMap">
		select * from await_queue
		where so_id=#{orderId}
	</select>

	<sql id="awaitQueueColumns">
		id,
		so_id,
		order_code,
		random_number,
		create_time,
		cash_pay_type
	</sql>

	<select id="findById" parameterType="com.egeo.components.pay.po.AwaitQueuePO" resultMap="awaitQueueMap">
		SELECT
		<include refid="awaitQueueColumns" />
		FROM await_queue
		WHERE id = #{po.id}
	</select>

	<select id="findOfPage" resultMap="awaitQueueMap">
		SELECT
		<include refid="awaitQueueColumns" />
		FROM await_queue
		<where>
			<if test="po.soId != null">
				and so_id = #{po.soId}
			</if>
			<if test="po.orderCode != null">
				and order_code = #{po.orderCode}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.cashPayType != null">
				and cash_pay_type = #{po.cashPayType}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>		
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
		<if test="page != null">
		limit #{page.limitStart},#{page.pageSize}
		</if>
	</select>
	
	<select id="countOfPage" resultType="java.lang.Integer">
		SELECT
		count(1) cnt
		FROM await_queue
		<where>
			<if test="po.soId != null">
				and so_id = #{po.soId}
			</if>
			<if test="po.orderCode != null">
				and order_code = #{po.orderCode}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.cashPayType != null">
				and cash_pay_type = #{po.cashPayType}
			</if>
		</where>
	</select>
	
	<select id="findAll" resultMap="awaitQueueMap">
		SELECT
		<include refid="awaitQueueColumns" />
		FROM await_queue
		<where>
			<if test="po.soId != null">
				and so_id = #{po.soId}
			</if>
			<if test="po.orderCode != null">
				and order_code = #{po.orderCode}
			</if>
			<if test="po.createTime != null">
				and create_time = #{po.createTime}
			</if>
			<if test="po.cashPayType != null">
				and cash_pay_type = #{po.cashPayType}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>			
			<otherwise>
				ORDER BY id desc		
			</otherwise>
		</choose>
	</select>
	
	<select id="findByOrderCode" resultMap="awaitQueueMap">
		SELECT
		<include refid="awaitQueueColumns" />
		FROM await_queue
		WHERE order_code = #{orderCode}
	</select>
</mapper>
	